<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".loginActivity.loginActivityMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/app_logo__image_layout"
                        android:layout_height="120dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/app_icon"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/app_logo__image_layout"
                        android:layout_height="match_parent">
                        <EditText
                            android:layout_width="match_parent"
                            android:drawableLeft="@drawable/ic_mail_icon_signup_screen"
                            android:drawablePadding="5dp"
                            android:id="@+id/user_email_text"
                            android:textColor="@color/colorBlack"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textSize="10dp"
                            android:hint="Your Email Id / Mobile Number"
                            android:inputType="textWebEmailAddress"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:layout_width="match_parent"
                            android:drawableLeft="@drawable/ic_password_icon_signup_screen"
                            android:drawablePadding="5dp"
                            android:fontFamily="serif"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/user_email_text"
                            android:id="@+id/user_password_text"
                            android:textColor="@color/colorBlack"
                            android:textStyle="normal"
                            android:textSize="10dp"
                            android:hint="Your Password"
                            android:inputType="textWebPassword"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:textSize="10dp"
                            android:id="@+id/forgot_password_text"
                            android:layout_below="@id/user_password_text"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="20dp"
                            android:text="Forgot My Password ? "/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@+id/forgot_password_text"
                            android:layout_marginLeft="50dp"
                            android:textColor="@color/colorWhite"
                            android:id="@+id/login_button_direct"
                            android:src="@drawable/right_arrow_login_signup"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="50dp"/>
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/google_icon"
                            android:id="@+id/login_by_google"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="40dp"
                            android:layout_below="@id/login_button_direct"/>
                        <FrameLayout
                            android:id="@+id/login_by_facebook_layout"
                            android:layout_below="@id/login_by_google"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/facebook"
                                android:id="@+id/login_by_facebook"
                                android:layout_marginBottom="20dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="40dp"
                                android:layout_below="@id/login_by_google"/>
                            <com.facebook.login.widget.LoginButton
                                android:id="@+id/login_button"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="45dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:visibility="gone" />
                        </FrameLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/login_by_facebook_layout"
                            android:layout_marginBottom="10dp"
                            android:textSize="10dp"
                            android:id="@+id/not_a_user"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="normal"
                            android:textAlignment="center"
                            android:text=" Not a user register to Ego ? "
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>