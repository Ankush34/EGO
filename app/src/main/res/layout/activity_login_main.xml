<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".loginActivity.loginActivityMain">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/app_logo__image_layout"
                    android:layout_height="200dp">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/app_icon"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/app_logo__image_layout"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="match_parent"
                        android:drawableLeft="@drawable/ic_user_login_email_icon"
                        android:drawablePadding="5dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:id="@+id/user_email_text"
                        android:textColor="@color/colorWhite"
                        android:textStyle="normal"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="13dp"
                        android:hint="Your Email Id / Mobile Number"
                        android:inputType="textWebEmailAddress"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="40dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="match_parent"
                        android:drawableLeft="@drawable/ic_user_login_password_icon"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_below="@+id/user_email_text"
                        android:id="@+id/user_password_text"
                        android:textColor="@color/colorWhite"
                        android:textStyle="normal"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="13dp"
                        android:hint="Your Password"
                        android:inputType="textWebPassword"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="40dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:textSize="13dp"
                        android:id="@+id/forgot_password_text"
                        android:layout_below="@id/user_password_text"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="20dp"
                        android:text="Forgot My Password ? "/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/forgot_password_text"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/colorWhite"
                        android:text="Login To Ego"
                        android:textAllCaps="false"
                        android:id="@+id/login_button_direct"
                        android:background="@drawable/shape"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="50dp"/>
                  <ImageView
                      android:layout_width="45dp"
                      android:layout_height="45dp"
                      android:src="@drawable/google_icon"
                      android:id="@+id/login_by_google"
                      android:layout_centerHorizontal="true"
                      android:layout_marginTop="40dp"
                      android:layout_below="@id/login_button_direct"/>
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/facebook"
                        android:id="@+id/login_by_facebook"
                        android:layout_marginBottom="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:layout_below="@id/login_by_google"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/login_by_facebook"
                        android:layout_marginBottom="10dp"
                        android:textSize="12dp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        android:text=" Not a user register to Ego ? "
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>