<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="105dp"
                android:layout_height="80dp"
                android:src="@drawable/ride_confirmed"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/sharing_image"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/sharing_image"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"
                        android:text="Rider Name: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ankush Khurana"
                        android:layout_weight="0.7"
                        android:id="@+id/rider_name"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"
                        android:text="Rider Contact Number: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9623099600"
                        android:layout_weight="0.7"
                        android:id="@+id/rider_phone"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"
                        android:text="Rider Pickup Address: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amura Marketing Technologies"
                        android:layout_weight="0.7"
                        android:id="@+id/rider_pickup_address"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"
                        android:text="Rider Drop Address: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Koregaon park orbit hotel"
                        android:layout_weight="0.7"
                        android:id="@+id/rider_drop_address"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"
                        android:text="Rider Time Travel: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 hr 33 min"
                        android:layout_weight="0.7"
                        android:id="@+id/rider_time_to_travel"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"
                        android:text="Ride Total Cost: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1200/-"
                        android:id="@+id/ride_total_cost"
                        android:layout_weight="0.7"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"
                        android:text="Ride Status: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pickup Pending"
                        android:id="@+id/ride_status"
                        android:layout_weight="0.7"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="25dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/cancel_pickup"
                            android:layout_centerVertical="true"
                            android:src="@drawable/cancel_pickup"
                            android:layout_height="20dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>