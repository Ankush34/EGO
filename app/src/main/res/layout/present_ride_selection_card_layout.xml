<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/driving_lisence_layout">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/driver_licence"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/driving_lisence_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/car_type_layout"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/fontSize"
                    android:text="Car Type: "
                    android:layout_weight="1.5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontSize"
                    android:id="@+id/car_type"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="0.5"
                    android:text="Ego Mini"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/car_model_layout"
                android:layout_below="@id/car_type_layout"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/fontSize"
                    android:text="Car Model: "
                    android:layout_weight="1.5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontSize"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="0.5"
                    android:id="@+id/car_model"
                    android:text="Swift Dezire"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/driver_name_layout"
                android:layout_below="@id/car_model_layout"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/fontSize"
                    android:text="Driver Name: "
                    android:layout_weight="1.5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontSize"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="0.5"
                    android:id="@+id/driver_name"
                    android:text="Ankush Khurana"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/driver_contact_layout"
                android:layout_below="@id/driver_name_layout"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/fontSize"
                    android:text="Driver Contact Number: "
                    android:layout_weight="1.5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontSize"
                    android:id="@+id/driver_contact"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="0.5"
                    android:text="9623099600"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/driver_status_layout"
                android:layout_below="@id/driver_contact_layout"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:id="@+id/total_cost"
                        android:textColor="#ff0000"
                        android:layout_marginLeft="5dp"
                        android:text="Rs.  325 /-"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.7"
                    android:layout_marginRight="20dp"
                    android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_width="85dp"
                    android:layout_height="25dp"
                    app:cardElevation="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/confirm_driver_button"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/colorPrimary"
                    app:cardCornerRadius="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp"
                            android:textAllCaps="false"
                            android:textAlignment="center"
                            android:text="Confrim Driver"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="3dp"
            android:background="#000fff"
            android:id="@+id/timing_correction_layout"
            android:layout_height="match_parent"
            android:layout_gravity="right">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/time_to_reach"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:text="1 min"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>