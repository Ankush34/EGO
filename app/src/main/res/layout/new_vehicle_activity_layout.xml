<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        android:background="@color/colorWhite"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".loginActivity.loginActivityMain">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:elevation="10dp"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark" ></android.support.v7.widget.Toolbar>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:layout_marginTop="10dp"
                android:id="@+id/my_vehicles_recycler">
            </android.support.v7.widget.RecyclerView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"
                android:id="@+id/nothing_found_image"
                android:src="@drawable/no_record_found"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true">
                <Button
                    android:layout_width="125dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shape"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:text="+ New vehicle"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <include layout="@layout/drawer"
            android:fitsSystemWindows="false" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    android:layout_weight="0.8">
                </RelativeLayout>
                <com.ak.ego.share_vehicle_module.screenCustomViewMobule.ArcLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.2"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorWhite"
                    android:background="@color/colorWhite"
                    app:arc_cropDirection="cropOutside"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:elevation="10dp"
                    app:arc_height="50dp"
                    app:arc_position="top">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorWhite"
                        android:background="@color/colorWhite">
                        <include layout="@layout/provider_sharing_rides_provided_info">
                        </include>
                    </RelativeLayout>
                </com.ak.ego.share_vehicle_module.screenCustomViewMobule.ArcLayout>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/confirm_details_sharing_layout">
        </include>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/show_multiple_directions_of_route">
        </include>
    </RelativeLayout>
</RelativeLayout>



