<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".loginActivity.loginActivityMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_label"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:textColor="@color/colorBlack"
                android:text="Your Location: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_city"
                android:layout_below="@+id/location_label"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textColor="@color/colorBlack"
                android:text="Location City "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_country"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:layout_below="@id/location_city"
                android:textColor="@color/colorBlack"
                android:text="Location Country "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_postal_code"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:layout_below="@+id/location_country"
                android:textColor="@color/colorBlack"
                android:text="Postal Code: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_address_line"
                android:textSize="12dp"
                android:layout_below="@id/location_postal_code"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack"
                android:text="Address : "/>

        </RelativeLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="135dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1.2"
                android:layout_height="match_parent">
                    <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    />
                </RelativeLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:id="@+id/book_a_share_ride"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:layout_width="195dp"
                            android:layout_height="125dp"
                            android:src="@drawable/book_a_share_ride"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"
                            android:textAlignment="center"
                            android:layout_marginTop="140dp"
                            android:text="Book a share ride on my way"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_below="@+id/book_a_share_ride"
                        android:id="@+id/book_a_groccery_order"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:layout_width="195dp"
                            android:layout_height="125dp"
                            android:src="@drawable/groccery_icon"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"
                            android:textAlignment="center"
                            android:layout_marginTop="140dp"
                            android:text="Plan groccery order on nearby stores"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:cardElevation="10dp"
                        android:id="@+id/book_a_pick_up"
                        android:layout_below="@+id/book_a_groccery_order"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:layout_width="195dp"
                            android:layout_height="125dp"
                            android:src="@drawable/order_a_pick_up"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"
                            android:textAlignment="center"
                            android:layout_marginTop="140dp"
                            android:text="Book a pick-up at my place"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:cardElevation="10dp"
                        android:id="@+id/book_a_bike_ride"
                        android:layout_below="@+id/book_a_pick_up"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:layout_width="195dp"
                            android:layout_height="125dp"
                            android:src="@drawable/bike_ride"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"
                            android:textAlignment="center"
                            android:layout_marginTop="140dp"
                            android:text="Book a Bike Ride on my way"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:cardElevation="10dp"
                        android:id="@+id/book_a_car"
                        android:layout_below="@+id/book_a_bike_ride"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:layout_width="195dp"
                            android:layout_height="125dp"
                            android:src="@drawable/taxi"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"
                            android:textAlignment="center"
                            android:layout_marginTop="140dp"
                            android:text="Book a Car Ride on my way"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:cardElevation="10dp"
                        android:id="@+id/share_my_vehicle"
                        android:layout_below="@+id/book_a_car"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:layout_width="175dp"
                            android:layout_height="125dp"
                            android:src="@drawable/share_car"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"
                            android:textAlignment="center"
                            android:layout_marginTop="140dp"
                            android:text="Book my vehicle to share service"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:cardElevation="10dp"
                        android:id="@+id/my_inventory_orders"
                        android:layout_below="@+id/share_my_vehicle"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:layout_width="175dp"
                            android:layout_height="125dp"
                            android:src="@drawable/manage_my_inventory_orders"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"
                            android:textAlignment="center"
                            android:layout_marginTop="140dp"
                            android:text="Manage my inventory orders service"/>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
                </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>