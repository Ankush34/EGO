<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorPrimary">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="155dp"
            android:layout_height="135dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/vehicle_logo"
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/vehicle_logo"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:id="@+id/vehicle_number_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.8"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"
                        android:text="Vehicle Number: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/vehicle_number"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:id="@+id/vehicle_reg_number_layout"
                    android:layout_below="@+id/vehicle_number_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.8"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"
                        android:text="Vehicle Registration Number: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/vehicle_registraion_number"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/vehicle_city_layout"
                    android:layout_below="@+id/vehicle_reg_number_layout"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.8"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"
                        android:text="Vehicle City: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/vehicle_city_name"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:id="@+id/vehicle_type_layout"
                    android:layout_below="@+id/vehicle_city_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.8"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"
                        android:text="Vehicle Type: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/vehicle_type"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:id="@+id/vehicle_created_at_layout"
                    android:layout_below="@+id/vehicle_type_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.8"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"
                        android:text="Vehicle Added At Date: "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="12-08-2018"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/vehicle_created_at"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:id="@+id/vehicle_last_updated_at_layout"
                    android:layout_below="@+id/vehicle_created_at_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.8"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"
                        android:text="Vehicle Details Last Changed : "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:text="16-08-2018"
                        android:id="@+id/vehicle_update_date"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:id="@+id/vehicle_shared_count_layout"
                    android:layout_below="@+id/vehicle_last_updated_at_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.8"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"
                        android:text="Total Rides Shared"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:text="24"
                        android:id="@+id/vehicle_shared_count"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/vehicle_shared_count_layout">
                    <Button
                        android:layout_width="125dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Start Share"
                        android:id="@+id/start_share_button"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>